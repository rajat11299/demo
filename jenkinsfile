pipeline {
    agent any
    environment {
        GOOGLE_APPLICATION_CREDENTIALS = credentials('pipeline-service-account') 
    }
    parameters {
        booleanParam(name: 'RUN_TERRAFORM_INIT', defaultValue:true, description:'Run Terraform init')
        booleanParam(name: 'RUN_TERRAFORM_VALIDATE', defaultValue:true, description:'Run Terraform validate')
        booleanParam(name: 'RUN_TERRAFORM_DESTROY', defaultValue:true, description:'Run Terraform destroy')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                url: 'https://github.com/rajat11299/demo.git'
            }
        }
        
        stage('Terraform Init') {
            when {
                expression { return params.RUN_TERRAFORM_INIT }
            }
            steps {
                sh '''
                    which terraform
                    terraform version
                    terraform init \
                    -backend-config="bucket=terraform-backend1123" \
                    -backend-config="prefix=terraform1/state" \
                    -force-copy
                '''
            }
        }
        
        stage('Terraform Validate') {
            when {
                expression { return params.RUN_TERRAFORM_VALIDATE }
            }
            steps {
                sh 'terraform validate'
                sh 'terraform apply -auto-approve'
            }
        }
        stage('Terraform Destroy') {
            when {
                expression { return params.RUN_TERRAFORM_DESTROY }
            }
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }
       
    }
    
    post {
        success {
            echo 'Pipeline succeeded!'
            mail to: 'rajat11299@gmail.com',
                subject: "Pipeline Succeeded: ${currentBuild.fullDisplayName}",
                body: "The pipeline ${env.BUILD_URL} has successfully completed."
        }
        failure {
            echo 'Pipeline failed!'
            mail to: 'rajat11299@gmail.com',
                subject: "Pipeline Failed: ${currentBuild.fullDisplayName}",
                body: "The pipeline ${env.BUILD_URL} has failed. Check the logs for details."
        }
    }
}
